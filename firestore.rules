rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura pública apenas dos documentos necessários para o status
    match /eventStats/{docId} {
      allow read: if request.method == 'get' || request.method == 'list';
      // Escrita apenas para usuários autenticados (admin)
      allow write: if request.auth != null;
    }
    // Bloqueia todo o resto por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
